{
    "family": "ecs-fargate-user-td",
    "executionRoleArn": "arn:aws:iam::${{ secrets.ACCOUNT_ID }}:role/AmazonECSTaskExecutionRolePolicy",
    "containerDefinitions": [
        {
            "portMappings": [
                {
                    "containerPort": 4001,
                    "hostPort": 4001,
                    "protocol": "tcp"
                }
            ],
            "name": "ecs-fargate-user-container",
            "image": "${{ secrets.ECR_REGISTRY }}/${{ secrets.ECR_REPOSITORY }}:latest",
            "essential": true
        }
    ],
    "cpu": "256",
    "memory": "1024",
    "networkMode": "awsvpc",
    "runtimePlatform": {
        "operatingSystemFamily": "LINUX"
    },
    "requiresCompatibilities": [
        "FARGATE"
    ]
}